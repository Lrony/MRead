<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@color/colorForeground"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/bookdetail_book_more_info"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/tv_word_count_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bookdetail_book_word_count"
        android:textColor="@color/textAssist"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/tv_create_date_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/bookdetail_retention_ratio"
        android:textColor="@color/textAssist"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/tv_copyright_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="6dp"
        android:text="@string/bookdetail_copyright"
        android:textColor="@color/textAssist"
        android:textIsSelectable="true"
        android:textSize="@dimen/text_size_small" />
</LinearLayout>